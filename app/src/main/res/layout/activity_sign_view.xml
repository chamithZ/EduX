<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="411dp"
        android:layout_height="274dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="90dp"
        android:layout_height="97dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <TextView
        android:id="@+id/projectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="EduX"
        android:textColor="#CDFEFEFE"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView24"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="408dp"
        android:layout_height="697dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:text="Are you a student seeking knowledge"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="196dp"
            android:layout_height="133dp"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_launcher_learn_foreground" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="0sp"
            android:layout_marginBottom="5dp"
            android:text="Are you a teacher who likes to volunteer"
            android:textAlignment="center"
            android:textColor="#30298F"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="269dp"
            android:layout_height="146dp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="4dp"
            app:srcCompat="@drawable/ic_launcher_teach_foreground" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signT"
            android:layout_width="202dp"
            android:layout_height="57dp"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn2"
            android:text="Sign as teacher"
            android:textColor="@color/fontBlue1"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signS"
            android:layout_width="202dp"
            android:layout_height="57dp"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn2"
            android:text="sign in as student"
            android:textColor="@color/fontBlue1"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="202dp"
            android:layout_height="57dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/btn1"
            android:text="Log in"
            android:textAlignment="center"
            android:textColor="@color/pgrey"
            android:textSize="20sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>