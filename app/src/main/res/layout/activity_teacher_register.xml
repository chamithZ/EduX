<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="453dp"
        android:layout_height="113dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="321dp"
        android:layout_height="732dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="213dp"
            android:layout_height="48dp"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="75sp"
            android:layout_marginBottom="10sp"
            android:text="Join as Teacher"
            android:textColor="@color/pgrey"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="416dp"
            android:layout_height="530dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="343dp"
                android:layout_height="665dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <EditText
                    android:id="@+id/Tname"
                    android:layout_width="235dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"

                    android:ems="10"
                    android:hint="name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10sp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/Temail"
                    android:layout_width="237dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"

                    android:ems="10"
                    android:hint="Email address"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/Tphone"
                    android:layout_width="235dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"
                    android:ems="10"
                    android:hint="Contact number"
                    android:inputType="phone"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/Tage"
                    android:layout_width="235dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"
                    android:ems="10"
                    android:hint="age"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/Tpassword"
                    android:layout_width="232dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/TrePassword"
                    android:layout_width="226dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"
                    android:ems="10"
                    android:hint="Re-type password"
                    android:inputType="textPassword"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/qualification"
                    android:layout_width="236dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"
                    android:ems="10"
                    android:hint="Qualification"
                    android:inputType="text"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/bankAc"
                    android:layout_width="236dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"
                    android:ems="10"
                    android:hint="Bank AC number"
                    android:inputType="numberSigned|number"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/bankBranch"
                    android:layout_width="236dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="75sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/btn2"
                    android:backgroundTint="#C4E0E0E0"
                    android:ems="10"
                    android:hint="Branch of the bank"
                    android:inputType="text"
                    android:paddingLeft="10sp" />


            </LinearLayout>

        </ScrollView>

        <CheckBox
            android:id="@+id/TcheckBox"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="8sp"
            android:layout_marginRight="75sp"
            android:layout_marginBottom="10sp"
            android:text="I agree to terms and conditions"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Tregister"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn1"
            android:gravity="center"
            android:text="Register Now"
            android:textAlignment="center"
            android:textAllCaps="false"

            android:textColor="@color/pgrey"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>